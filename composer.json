{
    "name": "echo-fusion/servicemanager",
    "description": "a container implement PSR-11",
    "keywords": ["container", "service manager", "psr-11"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Amir Shadanfar",
            "email": "a.shadanfar.it@gmail.com"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "friendsofphp/php-cs-fixer": "dev-master",
        "vimeo/psalm": "5.x-dev"
    },
    "autoload": {
        "psr-4": {
            "EchoFusion\\ServiceManager\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EchoFusion\\ServiceManager\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": [
            "@cs-fix","@phpunit"
        ],
        "phpunit": "vendor/bin/phpunit",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "analyze": "psalm --show-info=false --no-cache --no-progress"
    },
    "minimum-stability": "stable"
}
